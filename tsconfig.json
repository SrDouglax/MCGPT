{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "Node",
    "module": "CommonJS", // Alterado para CommonJS para compatibilidade com just-scripts
    "declaration": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": "behavior_packs/",
    "listFiles": false,
    "noEmitHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "lib",
    "dist",
    "node_modules"
  ]
}